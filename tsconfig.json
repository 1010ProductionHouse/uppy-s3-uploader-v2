{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode - Removing options that conflict with direct JS emit */
    "moduleResolution": "bundler", // Keep this, it's generally fine
    // REMOVE THIS: "allowImportingTsExtensions": true,
    // REMOVE THIS: "verbatimModuleSyntax": true,
    // REMOVE THIS: "moduleDetection": "force",

    // --- CRITICAL CHANGES FOR THE WORKAROUND (Confirmed) ---
    "noEmit": false, // <--- This was changed from true
    "outDir": "dist", // <--- Added this
    "rootDir": "src", // <--- Added this

    /* Linting (keeping only the essential ones that don't conflict) */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
    // REMOVE THIS: "erasableSyntaxOnly": true,
    // REMOVE THIS: "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}